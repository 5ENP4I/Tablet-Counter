<Application x:Class="TabletCounter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TabletCounter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Brush x:Key="AntiFlashWhite">#EFEFEF</Brush>
        <Brush x:Key="ByzantineBlue">#3454d1</Brush>
        <Brush x:Key="Turquoise">#34d1bf</Brush>
        <Brush x:Key="Black">#070707</Brush>
        <Brush x:Key="Cerise">#d1345b</Brush>
        
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Background" Value="{StaticResource AntiFlashWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AntiFlashWhite}"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>
